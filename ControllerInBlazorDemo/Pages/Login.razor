@page "/login"
<h3>Login</h3>

<form action="cookie" method="post" Model="Model">

    <div class="form-group">
        <label>Email</label>
        <input class="form-control" name="email" @bind="Model.Email" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input class="form-control" name="password" @bind="Model.Password" />
    </div>
    <input type="submit" value="Login" class="btn btn-primary" />
</form>
@code {

    public LoginModel Model { get; set; } = new LoginModel();
    protected override void OnInitialized()
    {
        Model = new LoginModel();
        base.OnInitialized();
    }


}
